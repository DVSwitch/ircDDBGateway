/var/log/ircddbgateway/ircDDBGateway.log
{
        daily
        rotate 30
        maxage 30
#       dateyesterday
        dateext
        dateformat -%Y-%m-%d
        extension .log
        ifempty
        create

        firstaction
        today=$(date +"%Y-%m-%d")
        filename="/var/log/ircddbgateway/ircDDBGateway-$today.log"
        if [ -f "$filename" ]; then
                mv /var/log/ircddbgateway/ircDDBGateway-$today.log /var/log/ircddbgateway/ircDDBGateway.log
        fi
        endscript

}
 
